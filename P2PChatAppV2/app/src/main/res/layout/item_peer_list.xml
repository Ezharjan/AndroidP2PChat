<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    xmlns:tools="http://schemas.android.com/tools">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/civ_user_image_item_peer_list"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_margin="8dp"
        android:layout_marginBottom="8dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/iv_9" />

    <TextView
        android:id="@+id/tv_nickname_item_peer_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="2dp"
        android:layout_marginStart="8dp"
        android:maxLength="15"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_normal"
        app:layout_constraintEnd_toStartOf="@+id/tv_time_item_peer_list"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/civ_user_image_item_peer_list"
        app:layout_constraintTop_toTopOf="@+id/civ_user_image_item_peer_list"
        tools:text="指针" />

    <TextView
        android:id="@+id/tv_recent_message_item_peer_list"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="2dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:textSize="@dimen/text_size_small"
        app:layout_constraintBottom_toBottomOf="@+id/civ_user_image_item_peer_list"
        app:layout_constraintEnd_toEndOf="@+id/tv_time_item_peer_list"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/civ_user_image_item_peer_list"
        tools:text="你好！" />


    <TextView
        android:id="@+id/tv_time_item_peer_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:textSize="@dimen/text_size_very_small"
        app:layout_constraintBottom_toBottomOf="@+id/tv_nickname_item_peer_list"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="05:30" />


</android.support.constraint.ConstraintLayout>
