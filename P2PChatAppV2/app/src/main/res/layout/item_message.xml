<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="10dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rl_left_msg_item_message">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/civ_head_image_left_item_message"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:src="@drawable/iv_0" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/civ_head_image_left_item_message"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="15dp"
            android:layout_toEndOf="@id/civ_head_image_left_item_message"
            android:background="@drawable/bg_message_white_left"
            android:minHeight="50dp"
            android:orientation="horizontal"
            android:id="@+id/ll_left_text_item_message">

            <TextView
                android:id="@+id/tv_text_left_item_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:textColor="@color/black"
                android:textSize="15sp"
                tools:text="鉴定完毕" />
        </LinearLayout>

        <android.support.v7.widget.CardView
            android:layout_marginEnd="20dp"
            android:layout_marginTop="15dp"
            android:layout_alignTop="@id/civ_head_image_left_item_message"
            android:layout_toEndOf="@id/civ_head_image_left_item_message"
            android:id="@+id/cv_image_left_item_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:visibility="gone">

                <ImageView
                    android:id="@+id/iv_image_left_item_message"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"
                    tools:src="@drawable/iv_1" />

        </android.support.v7.widget.CardView>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rl_right_msg_item_message">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/civ_head_image_right_item_message"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/iv_4"
            android:layout_alignParentEnd="true" />

        <LinearLayout
            android:id="@+id/ll_right_text_item_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_message_green_right"
            android:minHeight="50dp"
            android:orientation="horizontal"
            android:layout_alignTop="@id/civ_head_image_right_item_message"
            android:layout_marginTop="15dp"
            android:layout_marginStart="20dp"
            android:layout_toStartOf="@id/civ_head_image_right_item_message">


            <TextView
                android:id="@+id/tv_text_right_item_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:layout_margin="10dp"
                android:textSize="15sp"
                tools:text="鉴定完毕" />

        </LinearLayout>

        <android.support.v7.widget.CardView
            android:layout_marginEnd="20dp"
            android:layout_marginTop="15dp"
            android:layout_alignTop="@id/civ_head_image_right_item_message"
            android:layout_toStartOf="@id/civ_head_image_right_item_message"
            android:id="@+id/cv_image_right_item_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:visibility="gone">


            <ImageView
                android:id="@+id/iv_image_right_item_message"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:scaleType="centerInside"
                android:adjustViewBounds="true"
                tools:src="@drawable/iv_1"  />

        </android.support.v7.widget.CardView>


    </RelativeLayout>


</LinearLayout>
