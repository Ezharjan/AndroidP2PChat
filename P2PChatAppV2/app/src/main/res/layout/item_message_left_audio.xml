<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:playSound="http://schemas.android.com/apk/res-auto"
    android:padding="10dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/civ_head_image_left_item_message"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:src="@drawable/iv_0" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/civ_head_image_left_item_message"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="15dp"
        android:layout_toEndOf="@id/civ_head_image_left_item_message"
        android:background="@drawable/bg_selector_text_message_left"
        android:minHeight="50dp"
        android:id="@+id/ll_left_audio_item_message"
        android:clickable="true"
        android:focusable="true">

        <com.rdc.p2p.widget.PlayerSoundView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="10dp"
            android:layout_gravity="center"
            android:id="@+id/psv_play_sound_left_item_message"
            playSound:direction="1"
            />

        <TextView
            android:id="@+id/tv_text_left_item_message"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:textSize="15sp"
            tools:text="  " />

    </LinearLayout>

</RelativeLayout>